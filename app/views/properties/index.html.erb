<div class="banner" id="banner">
  <video autoplay muted loop class="video-background">
    <source src="<%= asset_path('video-banner.mp4') %>" type="video/mp4">
    Your browser does not support the video tag.
  </video>
  <div class="overlay"></div>
  <div class="content">
    <h1 class="text-light">Votre séjour <strong>de rêve</strong> avec <strong>Pat' Immo</strong></h1>
    <p class="text-light">Gestion locative en Côte Basque</p>
    <div class=" text-center">
      <a href="#locations" class="scroll-down btn btn-outline-light p-3 rounded-4">
      <p>Voir nos locations</p>
      <i class="fa fa-chevron-down" aria-hidden="true"></i>
      </a>
    </div>
  </div>
</div>

<section class="mt-5">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h2 class="text-center mb-4" style="color: $text-heading;">Nos locations</h2>
      </div>
    </div>
    <div class="row">
      <% @properties.each do |property| %>
        <div id="locations"class="col-4">
          <div class="card rounded-5 mt-4 border-0 h-100" style="border: 1px solid $card-border;">
            <%= link_to image_tag('fallback-image.png', class: "card-img-top rounded-5"), property_path(property) %>
            <div class="card-body d-flex flex-column justify-content-between h-100">
              <div>
                <h5 class="card-title" style="color: $text-heading;"><%= property.title %></h5>
                <p class="card-text" style="color: $text-color;"><%= property.description.split(".").first %></p>
              </div>
              <p class="card-text" style="color: $text-color;"><strong>Prix par nuit :</strong> <%= property.price_per_night.to_i %> €</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<%# formulaire de contact %>
<section class="container-fluid position-relative mt-5" style="background: url('<%= asset_path('background-form.jpg') %>') no-repeat center fixed; background-size: cover;">
    <div class="overlay-form"></div> <!-- Ajout de la couche de couleur -->
    <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-md-8 contact-form">
            <div class="card shadow p-4">
                <h2 class="text-center mb-4">Contactez-Nous</h2>
                <form action="/contact" method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Nom</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Envoyer</button>
                </form>
            </div>
        </div>
    </div>
</section>
<%# fin du formulaire de contact %>

<section class="carousel">
  <div class="carousel-h">
    <div class="custom-caroussel-size mb-5">
    <h1 class="text-center mt-5 mb-5" style="color: $text-heading;">Avis clients</h1>
      <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%= image_tag 'fallback-image.png', alt: 'Description de l\'image', class: 'd-block object-fit-cover-slider-home'; %>
          </div>
          <div class="carousel-item">
            <%= image_tag 'fallback-image.png', alt: 'Description de l\'image', class: 'd-block object-fit-cover-slider-home'; %>
          </div>
          <div class="carousel-item">
            <%= image_tag 'fallback-image.png', alt: 'Description de l\'image', class: 'd-block object-fit-cover-slider-home'; %>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Précédent</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Suivant</span>
        </button>
      </div>
    </div>
  </div>
</section>
