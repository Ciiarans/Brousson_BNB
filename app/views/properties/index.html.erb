      <!-- Formulaire de contact -->
<section class="contact-section">
  <div class="container">
    <div class="row">
      <!-- Section des informations de contact -->
      <div class="col-md-6 contact-info">
        <h2>Contactez-nous</h2>
        <p>Vous pouvez nous joindre à ces coordonnées :</p>
        <ul class="contact-details">
          <li><i class="fa fa-phone"></i> +33 6 12 34 56 78</li>
          <li><i class="fa fa-envelope"></i> pat.immo@example.com</li>
          <li><i class="fa fa-map-marker"></i> 123 Rue de la Plage, Côte Basque, France</li>
        </ul>
      </div>

      <!-- Formulaire de contact -->
      <div class="col-md-6">
        <div class="contact-form card p-4">
          <form action="/contact" method="post">
            <div class="mb-3">
              <label for="name" class="form-label">Nom</label>
              <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div id="form-contact" class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
              <label for="message" class="form-label">Message</label>
              <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Envoyer</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<%# fin du formulaire de contact %>

