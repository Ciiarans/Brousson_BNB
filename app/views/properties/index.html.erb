<div class="banner" id="banner">
  <video autoplay muted loop class="video-background">
    <source src="<%= asset_path('video-banner.mp4') %>" type="video/mp4">
    Your browser does not support the video tag.
  </video>
  <div class="overlay"></div>
  <div class="content">
    <h1 class="text-light">Votre séjour <strong>de rêve</strong> avec <strong>Pat' Immo</strong></h1>
    <p class="text-light">Gestion locative en Côte Basque</p>
    <div class=" text-center">
      <a href="#locations" class="scroll-down btn btn-outline-light p-3 rounded-4">
      <p>Voir nos locations</p>
      <i class="fa fa-chevron-down" aria-hidden="true"></i>
      </a>
    </div>
  </div>
</div>


<%# Section de présentation des locations %>
<section class="mt-5">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h2 class="text-center mb-4" style="color: $text-heading;">Nos locations</h2>
      </div>
    </div>
    <div class="row">
      <% @properties.each do |property| %>
        <div id="locations"class="col-4">
          <div class="card rounded-5 mt-4 border-0 h-100" style="border: 1px solid $card-border;">
            <%= link_to image_tag('fallback-image.png', class: "card-img-top rounded-5"), property_path(property) %>
            <div class="card-body d-flex flex-column justify-content-between h-100">
              <div>
                <h5 class="card-title" style="color: $text-heading;"><%= property.title %></h5>
                <p class="card-text" style="color: $text-color;"><%= property.description.split(".").first %></p>
              </div>
              <p class="card-text" style="color: $text-color;"><strong>Prix par nuit :</strong> <%= property.price_per_night.to_i %> €</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
<%# Fin de la section de présentation des locations %>
