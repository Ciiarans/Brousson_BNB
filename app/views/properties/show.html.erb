<!-- =======================
Main Title START -->
<section class="py-0 pt-sm-5">
  <div class="container position-relative">
    <!-- Title and button START -->
    <div class="row mb-3">
      <div class="col-12">
        <!-- Meta -->
        <div class="d-lg-flex justify-content-lg-between mb-1">
          <!-- Title -->
          <div class="mb-2 mb-lg-0">
            <h1 class="fs-2 mb-1 title-font text-primary"><%= @property.title %></h1>
            <p class="mb-0 text-muted"><i class="bi bi-geo-alt me-2"></i><%= @address %></p>
          </div>
        </div>
      </div>
    </div>
    <!-- Title and button END -->
  </div>
</section>
<!-- =======================
Main Title END -->

<!-- =======================
Image gallery START -->
<section class="card-grid pt-0 mb-5">
  <div class="container">
    <div class="row g-2">
      <!-- Image de profil (grande image à gauche) -->
      <div class="col-md-6">
        <% if @property.first_image.attached? %>
          <%= cl_image_tag @property.first_image.key, width: 600, height: 800, crop: :fill, class: "w-100 h-auto rounded-5" %>
        <% else %>
          <%= image_tag 'fallback-image.png', alt: 'Aucune image de profil disponible', class: 'w-100 h-auto rounded-5' %>
        <% end %>
      </div>

      <!-- Section des petites images à droite (2x2) -->
      <div class="col-md-6">
        <div class="row">
          <% (0..3).each do |index| %> <!-- Affiche jusqu'à 4 images -->
            <div class="col-6 mb-2 position-relative">
              <% if @property.photos.attached? && @property.photos[index].present? %>
                <%= cl_image_tag @property.photos[index].key, class: 'w-100 h-auto rounded-5' %>
              <% else %>
                <%= image_tag 'fallback-image.png', alt: 'Image de fallback', class: 'w-100 h-auto rounded-5' %>
              <% end %>

              <!-- Bouton sur la 4ème image -->
              <% if index == 3 %>
                <div class="position-absolute bottom-0 end-0 m-4">
                  <button type="button" class="btn btn-outline-light border border-light rounded-pill px-4 py-2 d-flex align-items-center" data-bs-toggle="modal" data-bs-target="#galleryModal">
                    <i class="bi bi-images me-2"></i> Voir la galerie complète
                  </button>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Modale pour la galerie d'images -->
  <div class="modal fade" id="galleryModal" tabindex="-1" aria-labelledby="galleryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="galleryModalLabel">Toute les photos</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="row">
            <% @property.photos.each do |photo| %>
              <div class="col-md-4 mb-2">
                <% if photo.attached? %>
                  <%= cl_image_tag photo.key, class: 'img-fluid rounded' %>
                <% else %>
                  <%= image_tag 'fallback-image.png', alt: 'Image de fallback', class: 'img-fluid rounded' %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- =======================
Image gallery END -->

<!-- =======================
About hotel START -->
<section class="pt-0">
  <div class="container" data-sticky-container>
    <div class="row g-4 g-xl-5">
      <!-- Content START -->
      <div class="col-xl-7 col-lg-12 order-2 order-xl-1">
        <div class="vstack gap-5">
          <!-- About hotel START -->
          <div class="card bg-transparent border-0">
            <!-- Card header -->
            <div class="card-header border-bottom bg-transparent px-0 pt-0">
              <h3 class="mb-2 title-font text-primary">Informations</h3>
            </div>

            <!-- Card body START -->
            <div class="card-body pt-4 p-0">
              <p class="mb-3"><%= @property.description %></p>
            </div>
            <!-- Card body END -->
          </div>
          <!-- About hotel END -->

          <!-- Amenities START -->
          <div class="card bg-transparent border-0">
            <!-- Card header -->
            <div class="card-header border-bottom bg-transparent px-0 pt-0">
              <h3 class="card-title mb-2 title-font text-primary mb-0">Equipements</h3>
            </div>

            <!-- Card body START -->
            <div class="card-body pt-4 p-0">
              <div class="row g-4">
                <!-- Activities -->
<div class="col-sm-6">
  <% # Définir un compteur pour le nombre de catégories affichées %>
  <% display_limit = 4 %>
  <% category_count = 0 %>

  <% @equipment_categories.each do |key, equipments| %>
    <% if equipments.any? { |equipment| @property.equipments.include?(equipment) } %>
      <% category_count += 1 %>
      <% # Afficher les premières 4 catégories directement, le reste dans un conteneur caché %>
      <div class="equipment-category <%= category_count > display_limit ? 'collapse' : '' %>" <%= category_count > display_limit ? 'id=equipmentCollapse' : '' %>>
        <h5><%= key %></h5>
        <div class="equipment-items">
          <% equipments.each do |equipment| %>
            <% if @property.equipments.include?(equipment) %>
              <div class="equipment-item">
                <p><%= equipment %></p>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>

  <% # Afficher le bouton seulement si le nombre de catégories dépasse 4 %>
  <% if category_count > display_limit %>
    <button class="btn btn-primary mt-2" type="button" data-bs-toggle="collapse" data-bs-target="#equipmentCollapse" aria-expanded="false" aria-controls="equipmentCollapse">
      Voir tout les équipements
    </button>
  <% end %>
</div>


              </div>
            </div>
            <!-- Card body END -->
          </div>
          <!-- Amenities END -->
          <div class="google-map-frame">
            <iframe class="rounded-5"
              width="600"
              height="450"
              style="border:0"
              loading="lazy"
              allowfullscreen
              referrerpolicy="no-referrer-when-downgrade"
              src="https://maps.google.com/maps?q=<%= CGI.escape(@address) %>&output=embed">
            </iframe>
          </div>

          <!-- Hotel Policies START -->
          <div class="card bg-transparent border-0">
            <!-- Card header -->
            <div class="card-header bg-transparent px-0 pt-0">
              <h3 class="mb-0 title-font text-danger"></h3>
            </div>
            <!-- Card body START -->
            <!-- Card body END -->
          </div>
          <!-- Hotel Policies END -->
        </div>
      </div>
      <!-- Content END -->

      <!-- Right side content START -->
      <aside class="col-xl-5 col-lg-12 order-1 order-xl-2 d-xl-block"
             data-controller="total-price"
             data-total-price-priceperday-value="<%= @property.price_per_night %>">
        <div class="card bg-transparent border rounded-5 sticky-top z-sticky-card" style="top: 120px;">
          <!-- Card header START -->
          <div class="card-header bg-transparent border-bottom">
            <!-- Title -->
            <h5 class="card-title mb-2 mt-2 title-font text-red">Vérification des disponibilitées</h5>
          </div>
          <!-- Card body START -->
          <div class="card-body">
            <%= simple_form_for([@property, @reservation]) do |f| %>
              <div class="row g-4 mb-3" data-controller="datepicker">
                <div class="col-md-12 d-flex">
                  <div class="bg-light py-3 px-4 rounded-5 me-2">
                    <h5 class="fw-light small mb-1">
                      <i class="fa-solid fa-calendar-check me-2" style="color: #7dc0a3;"></i> Arrivée
                    </h5>
                    <%= f.input :start_date, label: false, placeholder:"selectionnez une date", as: :string, input_html: { type: 'date', class: 'rounded-5 mt-3', data: { datepicker_target: "startInput", total_price_target: 'startDate', action: 'change->total-price#calculPrice' } } %>
                  </div>
                  <div class="bg-light py-3 px-4 rounded-5">
                    <h5 class="fw-light small mb-1">
                      <i class="fa-solid fa-calendar-check me-2" style="color: #7dc0a3;"></i> Départ
                    </h5>
                    <%= f.input :end_date, label: false,placeholder:"selectionnez une date", as: :string, input_html: { type: 'date', class: 'rounded-5 mt-3', data: { datepicker_target: "endInput", total_price_target: "endDate", action: 'change->total-price#calculPrice' } } %>
                  </div>
                </div>
              </div>

              <!-- Aperçu du prix -->
              <ul class="list-group list-group-borderless mb-0">
                <li class="list-group-item px-2 d-flex border-0 justify-content-between">
                  <span class="h6 fw-light mb-0"></span>
                  <span class="h6 fw-light mb-0"></span>
                </li>
              </ul>

              <!-- Prix total -->
              <div class="d-flex justify-content-end align-items-center">
                <span class="h5 mb-0 title-font text-danger me-3">Prix total TTC:</span>
                <h5 class="mb-0 title-font text-danger" data-total-price-target="totalPrice">0,00 €</h5>
              </div>

              <!-- Boutons d'action -->
              <div class="d-grid gap-2 mt-3">
                <button type="button" class="btn btn-success rounded-4 text-light" data-bs-toggle="modal"
                        data-bs-target="#reservationModal"
                        data-action="click->modal#openModal">
                  Je réserve mon séjour
                </button>
                <%= link_to 'Choisir un autre gîte', "#{properties_path}#section-target", class: 'btn btn-primary rounded-4 custom-font-btn-show-2 text-light' %>
              </div>
            <% end %>
          </div>
          <!-- Card body END -->
        </div>
      </aside>
      <!-- Right side content END -->
      <!-- Modal de réservation -->
      <%= simple_form_for([@property, @reservation]) do |f| %>
        <div class="modal fade" id="reservationModal" tabindex="-1" aria-labelledby="reservationModalLabel" aria-hidden="true"
             data-controller="modal" data-total-price-priceperday-value="<%= @property.price_per_night %>">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="reservationModalLabel">Demande de réservation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <div class="container">
                  <!-- Dates de réservation -->
                  <div class="form-group mb-3">
                    <h6 class="fs-5">Arrivée</h6>
                    <p id="modalStartDate" class="fs-5 text-danger">Sélectionnez une date</p>
                    <input type="hidden" id="hiddenStartDate" name="start_date" value="">
                  </div>
                  <div class="form-group mb-3">
                    <h6 class="fs-5">Départ</h6>
                    <p id="modalEndDate" class="fs-5 text-danger">Sélectionnez une date</p>
                    <input type="hidden" id="hiddenEndDate" name="end_date" value="">
                  </div>

                  <div class="form-group mb-4">
                    <h6 class="fs-5">Prix total TTC</h6>
                    <p id="modalTotalPrice" class="fs-5 text-danger">0.00 €</p>
                    <input type="hidden" id="hiddenTotalPrice" name="total_price" value="0.00">
                  </div>
                  <!-- Formulaire de réservation -->
                  <div class="form-group mb-3">
                    <div class="d-flex">
                    <h6 class="fs-5">Civilité</h6>
                    <p> (Mr,Mme,Mlle)</p>
                    </div>
                    <%= f.input :civility, collection: ['Mr', 'Mme', 'Mlle'], label: false, input_html: { class: 'form-select' } %>
                  </div>
                  <div class="form-group mb-3">
                    <h6 class="fs-5">Prénom</h6>
                    <%= f.input :first_name, label: false, input_html: { class: 'form-control' } %>
                  </div>
                  <div class="form-group mb-3">
                    <h6 class="fs-5">Nom</h6>
                    <%= f.input :last_name, label: false, input_html: { class: 'form-control' } %>
                  </div>
                  <div class="form-group mb-3">
                    <h6 class="fs-5">Email</h6>
                    <%= f.input :email, label: false, input_html: { class: 'form-control' } %>
                  </div>
                  <div class="form-group mb-3">
                    <h6 class="fs-5">Téléphone</h6>
                    <%= f.input :phone, label: false, input_html: { class: 'form-control' } %>
                  </div>
                  <div class="form-group mb-3">
                    <h6 class="fs-5">Nombre de personnes</h6>
                    <%= f.input :number_of_guests, label: false, input_html: { class: 'form-control' } %>
                  </div>
                  <div class="form-group mb-3">
                    <h6 class="fs-5">Petite présentation</h6>
                    <%= f.input :message, label: false, placeholder:"Une petite présentation pour vous connaitre un peu plus :) ." , input_html: { class: 'form-control' } %>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <%= f.submit "Envoyer ma demande", class: "btn btn-primary" %>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <!-- Fin du modal de réservation -->
    </div>
  </div>
</section>
<!-- Fin du formulaire de réservation -->
  <hr class="separator">
<section>
  <div class="reglement-section my-5 p-4 rounded-5 shadow-sm" style="background-color: #f8f9f9;">
    <!-- Titre de la section -->
    <h3 class="mb-4 text-primary" style="color: #2C3E50;">Règlement de la propriété</h3>

    <!-- Contenu du règlement -->
    <div class="row text-dark">

      <div class="col-lg-4 mb-4 text-center">
        <div class="p-3 border rounded" style="background-color: #ffffff;">
          <h5><i class="fas fa-file-contract fa-2x mb-2"></i>Conditions générales</h5>
          <ul class="list-unstyled">
            <li><i class="fas fa-paw me-2"></i>Animaux non autorisés.</li>
            <li><i class="fas fa-smoking-ban me-2"></i>Interdiction de fumer.</li>
            <li><i class="fas fa-volume-up me-2"></i>Bruit limité après 22h00.</li>
          </ul>
        </div>
      </div>

      <div class="col-lg-4 mb-4 text-center">
        <div class="p-3 border rounded" style="background-color: #ffffff;">
          <h5><i class="fas fa-calendar-times fa-2x mb-2"></i>Politique d'annulation</h5>
          <ul class="list-unstyled">
            <li><i class="fas fa-times-circle me-2"></i>Annulation gratuite jusqu'à 7 jours.</li>
            <li><i class="fas fa-exclamation-triangle me-2"></i>Frais de 50% en cas d'annulation tardive.</li>
          </ul>
        </div>
      </div>

      <div class="col-lg-4 mb-4 text-center">
        <div class="p-3 border rounded" style="background-color: #ffffff;">
          <h5><i class="fas fa-clock fa-2x mb-2"></i>Arrivée et départ</h5>
          <ul class="list-unstyled">
            <li><i class="fas fa-door-open me-2"></i>Arrivée : à partir de 15h00.</li>
            <li><i class="fas fa-door-closed me-2"></i>Départ : avant 11h00.</li>
          </ul>
        </div>
      </div>

      <div class="col-lg-12 mb-4 text-center">
        <div class="p-3 border rounded" style="background-color: #ffffff;">
          <h5><i class="fas fa-money-bill-wave fa-2x mb-2"></i>Dépôt de garantie</h5>
          <p>Un dépôt de garantie de 200 € est requis à l'arrivée, remboursé après vérification.</p>
        </div>
      </div>

    </div>
  </div>
</section>
